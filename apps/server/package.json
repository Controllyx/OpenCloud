{
    "name": "server",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "run-p dev:server db:studio",
        "dev:server": "tsup src/index.ts --format esm --watch --onSuccess \"node dist/index.mjs\"",
        "db:studio": "prisma studio --browser none",
        "db:push": "prisma db push",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate dev",
        "db:validate": "prisma validate",
        "build": "rimraf dist && prisma db push && prisma generate && tsup src/index.ts --format esm",
        "clean": "rimraf dist",
        "start": "node ./dist/index.mjs"
    },
    "nodemonConfig": {
        "ignore": [
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
        "ext": "ts, js"
    },
    "dependencies": {
        "@fastify/busboy": "^1.2.1",
        "@fastify/cookie": "^9.0.4",
        "@fastify/cors": "^8.3.0",
        "@fastify/jwt": "^7.2.0",
        "@fastify/multipart": "^7.7.3",
        "@fastify/rate-limit": "^8.0.3",
        "@fastify/static": "^6.10.2",
        "@prisma/client": "^5.2.0",
        "@t3-oss/env-core": "^0.6.1",
        "argon2": "^0.31.0",
        "fastify": "^4.21.0",
        "fastify-plugin": "^4.5.1",
        "fastify-zod": "^1.4.0",
        "ms": "^2.1.3",
        "sharp": "^0.32.5",
        "zod": "^3.22.2"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
        "@types/ms": "^0.7.31",
        "@types/node": "^20.5.1",
        "@types/prettier": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "eslint": "^8.47.0",
        "eslint-config-custom": "workspace:*",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.0.2",
        "prisma": "^5.2.0",
        "rimraf": "^5.0.1",
        "tsconfig": "workspace:*",
        "tsconfig-paths": "^4.2.0",
        "tsup": "^7.2.0",
        "typescript": "^5.1.6"
    }
}
